[column]
    ui = auto

[alias]
    # git l gives a really nice log
    l = log --pretty=oneline -n 20 --graph --abbrev-commit

    # pull and rebase
    pr = pull --rebase

    # Switch to a branch, creating it if necessary
    go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

    # My most common typo
    pish = push

[help]
    # Wait 2 seconds before executing typo corrected commands.
	  autocorrect = prompt

[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix

[push]
    # Use git2.0 push mode
    default = simple
	  autoSetupRemote = true
    followTags = true

[core]
    # ctime on OSX is broken so just dont do this anywhere
    trustctime = false
    autocrlf = input
    excludefiles = ~/.gitignore
    pager = delta
	excludesfile = /Users/david.groves/.gitignore_global

[color]
[color "branch"]
   current = yellow reverse
   local = yellow
   remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold # line info
    old = red # deletions
    new = green # additions

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[diff]
    # Detect copies as well as renames
    renames = copies
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true

[diff "bin"]
    # Use `hexdump` to diff binary files
    textconv = hexdump -v -C

[merge]
    # Include summaries of merged commits in newly created merge commit messages
    log = true
    conflictstyle = zdiff3

[user]
    email = git@fibrecat.org
    name = David Groves

[init]
    defaultBranch = main

[branch]
    sort = -committerdate

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[fetch]
    prune = true
    pruneTags = true
    all = true

[commit]
    verbose = true

[rerere]  
    enabled = true
    autoupdate = true

[tag]
    sort = version:refname

[pull]
    rebase = true

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true

